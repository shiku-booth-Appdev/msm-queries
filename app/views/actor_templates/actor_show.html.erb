<h1>
  Actor #<%= @actor_details.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @actor_details.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor_details.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor_details.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor_details.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @actor_details.image %>" >
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor_details.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor_details.updated_at) %> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>
  
  <% @characterization.each do |a_character| %>
  <tr>
    <td>
      <%= Movie.where({:id => a_character.movie_id}).at(0).title %>
    </td>

    <td>
      <%= Movie.where({:id => a_character.movie_id}).at(0).year %>
    </td>

    <td>
      <%= Director.where({:id => Movie.where({:id => a_character.movie_id}).at(0).director_id}).at(0).name %>
    </td>

    <td>
      <%= a_character.name %>
    </td>

    <td>
      <a href="/movies/<%= a_character.movie_id%>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>